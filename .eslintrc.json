{
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "plugins": [
    "react"
  ],
  "extends": ["xo", "plugin:react/recommended"],
  "rules": {
    "indent": [2, 4, {"SwitchCase": 1}],
    "max-len": [2, 100],
    "max-params": [2, 3],
    "no-lonely-if": 0,
    "new-cap": 0,
    "react/display-name": 0,
    "react/prop-types": 0
  }
}
