body
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  text-align center
  position relative

main
  position relative
  background-color white
  z-index 1

$todoHeight = 50px

.tasks
  display flex
  flex-direction column
  align-items center

  .wrapper
    display flex
    justify-content center
    line-height $todoHeight
    width 80%
    min-height $todoHeight
    font-size 30px

    .todo
      position relative
      flex-basis 80%
      max-width 230px
      max-height $todoHeight
      //overflow hidden
      z-index 1
      left ($todoHeight / 2)
      border 2px solid black
      background-color white
    .slided
      left -20px

    .delete-button
      position relative
      right ($todoHeight / 2)
      z-index 0
      background-color red
      width $todoHeight
      height $todoHeight
      border 2px solid black

  .replace
    border 2px solid black
    padding 10px

    .taskTextArea
      font-size 30px
      max-width 150px

    .saveButton
      width $todoHeight
      margin-left 40px
      border: none;
      background url(https://cdn2.iconfinder.com/data/icons/windows-8-metro-style/128/save.png) no-repeat center
      background-size 80%

.refresh
  position absolute
  height 40px
  background-color grey
  width 100%
  top 0
  left 0
  z-index -2

.task-creator
  padding-top 20px
  display flex
  flex-direction column
  align-items center

  .task-form
    width 65%
    text-align center

  .add-button
    height $todoHeight

